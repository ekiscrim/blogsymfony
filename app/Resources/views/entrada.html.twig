{% extends 'base.html.twig' %}
{% block content %}

<div class="row">
    <div class="col-lg-8">
            <h1>{{ entrada.title }}</h1>
            <p class="lead">Autor: <a href="">{{ entrada.autor }}</a></p>
            <hr>
            <p><span class="glyphicon glyphicon-time"></span> {{ entrada.fecha|date('d-m-Y') }}</p>
            <hr>
            <img class="img-responsive" src="http://placehold.it/900x300" alt=""><small>{{ entrada.slug }}</small>
            <hr>
            <!-- Post Content -->
            <p class="lead">{{ entrada.contenido }}</p>
            <hr>
    </div>

{% endblock %}
